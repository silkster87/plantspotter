{
  "expo": {
    "name": "client",
    "newArchEnabled": true,
    "slug": "client",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "plugins": [
      "@react-native-google-signin/google-signin",
      [ "expo-camera", { "cameraPermission": "Allow PlantSpotter to access your camera" }],
      ["expo-media-library",
      {
        "photosPermission": "Allow PlantSpotter to access your photos.",
        "savePhotosPermission": "Allow PlantSpotter to save photos.",
        "isAccessMediaLocationEnabled": true
      }],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to upload and identify plants."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow PlantSpotter to use your location."
        }
      ]
    ],
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
